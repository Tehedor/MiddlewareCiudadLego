doctype html
html
    head
        title= title
        link(rel="shortcut icon" href='/img/favicon.ico')
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" crossorigin="anonymous")
        link(rel='stylesheet', href='/stylesheets/style.css')
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
    body
        header(role="banner" class="sticky-top" style="background-color: #e5f5f7;padding:10px;")
            nav(class="navbar navbar-expand-lg")
                ul.nav.d-flex.flex-row
                    - var isContainer = MODE_CONTAINERS === 'true'
                    - var basePath = isContainer ? '/subsControlApp' : ''
                    
                    li.nav-item
                        a.nav-link(href=`${basePath}/`) #{MODE_CONTAINERS} || #{isContainer} || #{basePath} 
                    li.nav-item
                        a.nav-link(href=`${basePath}/`) Home
                    li.nav-item
                        a.nav-link(href=`${basePath}/entities`) Entidades
                    li.nav-item
                        a.nav-link(href=`${basePath}/draco`) Draco Subs
                    li.nav-item
                        a.nav-link(href=`${basePath}/relations`) Relaciones Subs
                    li.nav-item
                        a.nav-link(href=`${basePath}/all`) Monitor General

        block content
            p Pagina de inicio 

